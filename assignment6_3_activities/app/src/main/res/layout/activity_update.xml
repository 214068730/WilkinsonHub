<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="runningshop.orderingSystem.activities.customers.Update">

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnCustomerUpdate"
        android:onClick="onCustomerUpdate" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btnUpdateHome"
        android:onClick="onHome" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/updateLayout"
        android:layout_above="@+id/btnCustomerUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp">

        <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCustomerNameUpdate" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignBottom="@+id/textView14"
            android:layout_toRightOf="@+id/textView14"
            android:layout_toEndOf="@+id/textView14"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/txtCustomerNameUpdate" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="StreetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblCustomerStreetNameUpdate" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_alignBottom="@+id/textView14"
                android:layout_toRightOf="@+id/textView14"
                android:layout_toEndOf="@+id/textView14"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:id="@+id/txtCustomerStreetNameUpdate" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="Suburb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblCustomerSuburbUpdate" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_alignBottom="@+id/textView14"
                android:layout_toRightOf="@+id/textView14"
                android:layout_toEndOf="@+id/textView14"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:id="@+id/txtCustomerSuburbUpdate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Postal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblCustomerPostalCodeUpdate" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_alignBottom="@+id/textView14"
                android:layout_toRightOf="@+id/textView14"
                android:layout_toEndOf="@+id/textView14"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:id="@+id/txtCustomerPostalCodeUpdate" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtUpdateSearchID"
        android:layout_toRightOf="@+id/txtUpdateSearchID"
        android:layout_toEndOf="@+id/txtUpdateSearchID"
        android:id="@+id/btnSearchUpdateID"
        android:text="Search ID"
        android:onClick="onCustomerUpdateSearch" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtUpdateSearchID"
        android:layout_above="@+id/updateLayout"
        android:layout_alignLeft="@+id/updateLayout"
        android:layout_alignStart="@+id/updateLayout"
        android:layout_marginBottom="76dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Customer"
        android:id="@+id/textView16"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textColor="#060606"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtID"
        android:layout_alignRight="@+id/updateLayout"
        android:layout_alignEnd="@+id/updateLayout" />
</RelativeLayout>
