<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.CustomerMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordering System"
        android:id="@+id/textView7"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:textColor="#060606"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Customer"
            android:id="@+id/btnCustomerAdd"
            android:layout_above="@+id/btnViewCustomers"
            android:layout_centerHorizontal="true"
            android:onClick="onClick" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Update Customer"
            android:id="@+id/btnUpdateCustomers"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btnMenu"
            android:onClick="onUpdateCustomer" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Delete Customer"
            android:id="@+id/btnDelete"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="onDelete" />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="View Customers"
            android:id="@+id/btnViewCustomers"
            android:layout_alignParentBottom="true"
            android:onClick="viewCustomer" />
    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/customersmenu"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
